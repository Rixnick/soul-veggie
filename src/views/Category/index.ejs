<!DOCTYPE html>
<html>
<%- include('../Partials/Header')%>
<body>
  <%- include('../Partials/Navbar')%>
  <%- include('../Partials/Sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20">
			<div class="card-box mb-30">    
        <div class="clearfix">
          <div class="pull-left">
            <h2 class="h4 pd-20">ລາຍການປະເພດຫມາກໄມ້ ແລະ ຜັກ</h2>
          </div>
          <div class="pull-right">
            <a href="/category/add" class="btn btn-outline-primary btn-sm scroll-click" >ເພີ່ມຂໍ້ມູນປະເພດ</a>
          </div>
        </div> 
        <table class="checkbox-datatable table nowrap">
          <thead>
            <tr>
              <th><div class="dt-checkbox">
                  <input type="checkbox" name="select_all" value="1" id="example-select-all">
                  <span class="dt-checkbox-label"></span>
                </div>
              </th>
              <th>ປະເພດ</th>
              <th>ອະທິບາຍ</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(function(category){%>
              <tr>
                <td></td>
                <td><%= category.name %></td>
                <td><%= category.desc %></td>
                <td>
                  <div class="dropdown">
                    <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                      <i class="dw dw-more"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                      <!-- <a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a> -->
                      <a class="dropdown-item" href="/category/edit/<%= category.id %>"><i class="dw dw-edit2"></i> Edit</a>
                      <a class="dropdown-item" href="/category/delete/<%= category.id %>"  id="sa-params"><i class="dw dw-delete-3"></i> Delete</a>
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
			</div>
		</div>
    <%- include('../Partials/Footer')%>
	</div>
  <%- include('../Partials/Script') %>
</body>
</html>