<!DOCTYPE html>
<html>
<%- include('../Partials/Header')%>
<body>
  <%- include('../Partials/Navbar')%>
  <%- include('../Partials/sellerSide')%>
    <div class="main-container">
      <div class="pd-ltr-20 xs-pd-20-10">
          <div class="min-height-100px">
            <div class="page-header">
              <div class="row">
                  <div class="col-md-6 col-sm-12">
                    <div class="title">
                      <h4>ຫນ້າຂ່າຍສີນຄ້າ</h4>
                      <p></p>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                      <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">ຫນ້າຫຼັກ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">ສີນຄ້າມື້ນີ້</li>
                      </ol>
                    </nav>
                  </div>
                </div>
            </div>
            <div class="product-wrap">
              <div class="product-list">
                <ul class="row">
                  <% products.forEach(function(product){%>
                    <li class="col-lg-4 col-md-6 col-sm-12">
                      <div class="product-box">
                        <div class="producct-img">
                          <img src="data:image/<%= product.vegetable.image.contentType%>;base64, <%= product.vegetable.image.data.toString('base64')%>"  alt="">
                        </div>
                        <form action="/products/carts/<%= product.vegetable.id %>" method="post">
                          <div class="product-caption">
                            <h4><a href="#"><%= product.vegetable.name %></a></h4>
                            <div class="price">
                              <del>stock: <%= product.qty %></del><span> </span><%= product.unit %><ins>ລາຄາ: <%= product.price %> k</ins>
                              <input type="text" hidden name="userId" value="<%= userId %>">
                              <input type="text" hidden name="price" value="<%= product.price %>">
                              <input type="text" hidden name="unit" value="<%= product.unit %>">
                            </div>
                            <button type="submit" class="btn btn-outline-primary">ຂາຍສິນຄ້າ</button>
                          </div>
                        </form>                        
                      </div>
                    </li>
                    <% }) %>
                </ul>
              </div>
              <div class="blog-pagination mb-30">
                <div class="btn-toolbar justify-content-center mb-15">
                  <div class="btn-group">
                    <a href="#" class="btn btn-outline-primary prev"><i class="fa fa-angle-double-left"></i></a>
                    <a href="#" class="btn btn-outline-primary">1</a>
                    <a href="#" class="btn btn-outline-primary">2</a>
                    <span class="btn btn-primary current">3</span>
                    <a href="#" class="btn btn-outline-primary">4</a>
                    <a href="#" class="btn btn-outline-primary">5</a>
                    <a href="#" class="btn btn-outline-primary next"><i class="fa fa-angle-double-right"></i></a>
                  </div>
                </div>
              </div>
      <%- include('../Partials/Footer')%>
		</div>
	</div>
  <%- include('../Partials/Script') %>
</body>
</html>